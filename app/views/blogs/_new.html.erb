<div class="modal-header"> 
  <h4 class="modal-title" id="myModalLabel">Modal title</h4> 
</div>
 <div class="modal-body"> 
 <h1>New Blog</h1>
<%= form_for  :blog, url: blogs_path do |form| %>
<!-- <%#= form_with(model: blog, local: false) do |form| %> -->
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

    <div >
    <%= form.fields_for :attachments do |f| %>
    <label class="col-sm-2 control-label">Image</label>
      <div class="col-sm-10">
          <%= f.file_field :attachment, class: "form-control"%>
          <%#= f.hidden_field :_destroy, value: false, class: "form-control"%> 
            <%#= attachment.hidden_field :attachable_id, class: "form-control"%>
            <%#= attachment.hidden_field :attachable_type, class: "form-control"%>
      </div>
      <% end %>
    </div>
  <div class="modal-footer"> 
    
      <%= form.submit class: "btn btn-primary" %> 
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> 

  </div>
<% end %>
</div>
  
  